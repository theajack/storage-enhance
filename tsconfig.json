{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": false,
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": false,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noEmit": false,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "jsx": "preserve",
        "lib": ["esnext", "dom"],
        "typeRoots": [
            "node_modules/@types",
            "./src/type"
        ],
        "types": ["node"],
        "rootDir": ".",
        // "paths": {
        //   "@vue/*": ["packages/*/src"]
        // }
    },
    "include": [
        "./src/**/*",
        "./public/**/*"
    ],
    "exclude": [
        "./node_modules",
        "./src/**/*.d.ts",
        "./**/temp-storage.ts",
        "./**/node-storage.ts",
        "./**/miniapp-storage.ts",
        "./**/cookie-storage.ts"
    ]
}